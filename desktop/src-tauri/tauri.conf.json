{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Hive Desktop",
  "version": "0.1.0",
  "identifier": "com.hive.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Hive Desktop",
        "width": 1600,
        "height": 980,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": false,
    "targets": "all"
  }
}
